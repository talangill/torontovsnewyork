<script>
  let currentSection = 1;
  const totalSections = 5;
  let startTime = null;
  let timerInterval = null;
  const sessionMinutes = 60;

  function startMasterclass() {
    document.getElementById('cover').style.display = 'none';
    document.getElementById('nav').style.display = 'flex';
    document.getElementById('main').style.display = 'block';
    startTime = Date.now();
    buildNavDots();
    startTimer();
  }

  function buildNavDots() {
    const container = document.getElementById('navDots');
    container.innerHTML = '';
    for (let i = 1; i <= totalSections; i++) {
      const dot = document.createElement('button');
      dot.className = 'nav-dot' + (i === 1 ? ' active' : '');
      dot.title = ['Warm-Up', 'National Cultures', 'Toronto vs NYC', 'Cultural Dimensions', 'Reflection'][i-1];
      dot.onclick = () => goSection(i);
      container.appendChild(dot);
    }
  }

  function goSection(n) {
    document.getElementById('s' + currentSection).classList.remove('active');
    currentSection = n;
    const next = document.getElementById('s' + currentSection);
    next.classList.add('active');
    window.scrollTo(0, 0);
    updateNavDots();
  }

  function updateNavDots() {
    document.querySelectorAll('.nav-dot').forEach((d, i) => {
      d.classList.toggle('active', i + 1 === currentSection);
    });
  }

  function startTimer() {
    timerInterval = setInterval(() => {
      const elapsed = (Date.now() - startTime) / 1000;
      const m = Math.floor(elapsed / 60);
      const s = Math.floor(elapsed % 60);
      document.getElementById('navTimer').textContent = 
        String(m).padStart(2,'0') + ':' + String(s).padStart(2,'0');
      const pct = Math.min((elapsed / (sessionMinutes * 60)) * 100, 100);
      document.getElementById('timerFill').style.width = pct + '%';
    }, 1000);
  }

  function answer(btn, isCorrect, revealId) {
    const opts = btn.closest('.quiz-options').querySelectorAll('.quiz-opt');
    opts.forEach(o => o.disabled = true);
    btn.classList.add(isCorrect ? 'correct' : 'wrong');
    if (!isCorrect) {
      opts.forEach(o => {
        if (!o.classList.contains('wrong')) o.classList.add('correct');
      });
    }
    document.getElementById(revealId).classList.add('show');
  }

  const tabIds = ['identity', 'politics', 'work', 'language'];
  function showTab(id) {
    tabIds.forEach(t => {
      const el = document.getElementById('tab-' + t);
      if (el) el.style.display = (t === id) ? 'block' : 'none';
    });
    document.querySelectorAll('.tab-btn').forEach(b => {
      b.classList.toggle('active', b.getAttribute('onclick').includes(id));
    });
  }

  function toggleAccordion(header) {
    const item = header.parentElement;
    const isOpen = item.classList.contains('open');
    document.querySelectorAll('.accordion-item').forEach(i => i.classList.remove('open'));
    if (!isOpen) item.classList.add('open');
  }
</script>
</body>
</html>
